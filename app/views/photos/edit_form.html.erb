<h1>Edit Photo</h1>


<form action="http://localhost:3000/update_photo/<%= @photo.id %>">
<div>
  <label for="caption">Caption:</label>
  <input for="caption" type="text" name="the_caption" value="<%= @photo.caption %>">
</div>
<div>
  <label for="source">Image URL:</label>
  <input for="source" type="text" name="the_source" value="<%= @photo.source %>">
</div>
<div>
  <button> Update Photo </button>
</div>
</form>
