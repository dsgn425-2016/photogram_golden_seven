<h1>Edit photo</h1>

<form action="http://localhost:3000//update_photo/<%=@photo.id%>/">
  <label for="caption">Caption:</label>
  <input type="text" name="the_caption" value="<%= @photo.caption %>" id="caption">

  <div>
    <label for="source">Image URL:</label>
    <input type="text" name="the_source" value="<%= @photo.source %>"id="source">
  </div>

  <button>Update Photo</button>
</form>
