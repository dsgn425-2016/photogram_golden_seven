<h1>Edit photo</h1>

<form action="http://localhost:3000/update_photo/<%= @photo.id %>">
  <label for="caption">Caption:</label>
  <input id="caption" type="text" name="the_caption" value="<%= @photo.caption %>">

  <label for="source">Source:</label>
  <input id="source" type="text" name="the_source" value="<%= @photo.source %>">

  <button>Update Photo</button>
</form>
