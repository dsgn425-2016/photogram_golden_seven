<h1>Edit a photo</h1>

<form action="http://localhost:3000/update_row/<%=@photo.id%>">

  <label for="the_caption">Caption:</label>
  <input type="text" id="the_caption" name="the_caption" value="<%=@photo.caption%>">

  <label for="the_source">Image URL:</label>
  <input type="text" id="the_source" name="the_source" value="<%=@photo.source%>">

  <img src="<%= @photo.source%>" width="480">
  <p><%= @photo.caption%></p>


  <button>Edit Photo</button>
</form>
